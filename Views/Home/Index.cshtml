@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

   

    <style>
        body {
            font-family: 'Times New Roman', Times, serif, sans-serif;
            background-image: url("images/background.jpg"); /* Replace with your movie-themed background image */
            backdrop-filter: brightness(0.6);
            background-size: cover;
            - background-position: center;
        }

        .movie-landing {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            background-size: cover;
            background-position: center;
        }

        .movie-content {
            text-align: center;
        }

            .movie-content h1 {
                font-size: 3em;
                margin-bottom: 20px;
            }

            .movie-content p {
                font-size: 1.5em;
                margin-bottom: 30px;
            }

            .movie-content a {
                color: black;
                text-decoration: none;
                font-weight: bold;
            }

        .movie-catalog {
            display: flex;
            justify-content: space-around;
        }

        .catalog-item {
            margin: 0 10px;
        }

            .catalog-item img {
                max-width: 100%;
                height: 400px;
                margin-bottom: 200px;
            }

    </style>
</head>

<body>

    <div class="movie-landing">
        <div class="movie-content">
            <h1 class="display-4">SHOWTIMES</h1>
            <p>Explore the newest and timeless films, immersing yourself in the realm of cinema.</p>
            <a href="/Movies" class="btn btn-warning btn-lg">Browse Movies</a>
            <p></p>
            <p>Available Movie Trailer</p>

            <div class="movie-catalog">
                <div class="catalog-item">
                    <a href="https://www.youtube.com/watch?v=-E10AcydCuk"><img src="images/whenharry.jpg" alt="Action Movies"></a>
                </div>
                <div class="catalog-item">
                    <a href="https://www.youtube.com/watch?v=6hDkhw5Wkas"><img src="images/ghostbuster.jpeg" alt="Drama Movies"></a>
                </div>
                <div class="catalog-item">
                    <a href="https://www.youtube.com/watch?v=weIqC-oUGmA&pp=ygUOZ2hvc3QgYnVzdGVyIDI%3D"><img src="images/ghostbuster2.jpg" alt="Drama Movies"></a>
                </div>
                <div class="catalog-item">
                    <a href="https://www.youtube.com/watch?v=WPO12ZzGS84&pp=ygUJcmlvIGJyYXZv"><img src="images/rbravo.jpg" alt="Comedy Movies"></a>
                </div>

            </div>
        </div>


     

</body>

</html>




